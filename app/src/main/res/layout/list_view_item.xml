<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content">

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Game 001"
			android:id="@+id/tvGameNumber"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"
			android:layout_alignParentBottom="true"
			android:gravity="center"/>
	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent" android:layout_alignParentTop="true"
			android:layout_toEndOf="@+id/tvGameNumber"
			android:weightSum="2">
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:weightSum="2">
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:text="Me" />
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:text="Android" />
		</LinearLayout>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:weightSum="2">
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:text="0"
					android:id="@+id/tvMyScore"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:text="0"
					android:id="@+id/tvAndroidScore"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>